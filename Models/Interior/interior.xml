<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>interior.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>interieur</object-name>
    <object-name>structure</object-name>
    <object-name>inttour</object-name>
    <object-name>intcanopyA</object-name>
    <object-name>intcanopyB</object-name>

    <!-- Objets transparents -->
    <object-name>intvitres</object-name>
    <object-name>intvitrecanopyA</object-name>
    <object-name>intvitrecanopyB</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>intvitres</object-name>
    <object-name>intvitrecanopyA</object-name>
    <object-name>intvitrecanopyB</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>intvitres</object-name>
    <object-name>intvitrecanopyA</object-name>
    <object-name>intvitrecanopyB</object-name>
  </animation>

  <!-- Pilote -->
  <model>
    <path>Aircraft/Aichi-D3A/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -2.041 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.342 </z-m>
    </offsets>
  </model>

  <!-- Pilote -->
  <model>
    <path>Aircraft/Aichi-D3A/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -0.951 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.302 </z-m>
    </offsets>
  </model>

  <!-- Tableau de bord -->
  <model>
    <path>Aircraft/Aichi-D3A/Models/Interior/Panel/panel.xml</path>
    <offsets>
      <x-m> -2.297 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.505 </z-m>
    </offsets>
  </model>

  <!-- Canopy -->
  <animation>
    <name>IntCanopy1</name>
    <object-name>intcanopyA</object-name>
    <object-name>intvitrecanopyA</object-name>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>IntCanopy1</object-name>
    <property>instrumentation/doors/crew/position-norm</property>
    <factor> 0.5 </factor>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <name>IntCanopy2</name>
    <object-name>intcanopyB</object-name>
    <object-name>intvitrecanopyB</object-name>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>IntCanopy2</object-name>
    <property>instrumentation/doors/passenger/position-norm</property>
    <factor> -0.5 </factor>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

</PropertyList>

